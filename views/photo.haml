.text-center
  %h3= @photo.caption || "Tagen #{@photo.timestamp.to_date}"
.overlay
  %a.float-left{href: url("/#{@photo.album_id}/#{@prev_id}")} &#8592;
  %a.float-right{href: url("/#{@photo.album_id}/#{@next_id}")} &#8594;
  %img.img-fluid{src: @photo.original_temp}
%h2.text-center Kommentarer
- @comments.each do |c|
  %div
    %a{href: "/member/#{c.member_id}"}= c.member.full_name
  .grid.grid-2
    %div
      %img.img-thumb{src: c.member.thumb_cdn, alt: "ingen profilbild"}
    %div
      = c.comment
  %div
    %small.text-muted
      %em= c.timestamp.strftime('%Y-%m-%d %H:%M')
  %hr
%form{method: :post, action: url("/#{@photo.id}/comment")}
  .form-group
    %input{type: :text, name: :comment, placeholder: "Kommentera h√§r"}
  %button.btn{type: :submit} Spara
