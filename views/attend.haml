%h1
  - if @attendance.id
    Du anmälde dig
    %small
      != @attendance.timestamp.to_date
  - else
    Anmäl dig
%form{method: :post}
  .checkbox
    %label
      %input{type: :checkbox, name: :vegitarian, value: :true, checked: @attendance.vegitarian}
      Vegetariskt
  .checkbox
    %label
      %input{type: :checkbox, name: :non_alcoholic, value: :true, checked: @attendance.non_alcoholic}
      Alkoholfritt
  .form-group
    %label Allergier
    %textarea{name: :allergies}
      != @attendance.allergies
  .form-group
    - if @attendance.id
      %input.btn.btn-success{type: :submit, value: 'Spara'}
    - else
      %input.btn.btn-success{type: :submit, value: 'Anmäl mig'}
    %a{href: '/'} Avbryt
