%table.table
  %thead
    %tr
      %th Datum
      %th Text
      %th Summa
      %th Saldo
  %tbody
    - balance = 0
    -@transactions.each do |t|
      - balance += t.sum
      %tr
        %td= t.timestamp.strftime('%Y-%m-%d %H:%M')
        %td= t.text
        %td= t.sum
        %td= balance
